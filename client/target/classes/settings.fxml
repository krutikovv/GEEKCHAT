<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<VBox fx:controller="client.SettingsController"
      xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT">

    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

    <HBox fx:id="hbNick" VBox.vgrow="ALWAYS" spacing="20">
        <padding>
            <Insets top="10" bottom="10" right="10" left="10"/>
        </padding>
        <Label fx:id="lblNick" text = "Your nickname: " minHeight="35" alignment="CENTER_LEFT"/>
        <TextField fx:id="nickField" minWidth="240"/>
    </HBox>

    <HBox fx:id="hbBottom" VBox.vgrow="ALWAYS" alignment="BOTTOM_RIGHT" spacing="20">
        <padding>
            <Insets top="10" bottom="10" right="10" left="10" />
        </padding>
        <Button fx:id="btnSave" text="SAVE" minWidth="100" onAction="#saveSettings"/>
        <Button fx:id="btnCancel" text="CANCEL" minWidth="100" onAction="#cancel"/>
    </HBox>

</VBox>